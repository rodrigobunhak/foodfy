{% extends "layouts/login.njk" %}

{% block title %}

  <h1>Nova senha</h1>

{% endblock %}

{% block field %}

  <form action="/session/password-reset" method="POST" id="form-reset">

    {% include 'session/fields.njk' %}

  </form>

{% endblock %}

{% block buttons %}

  <button class="button" type="submit" form="form-reset">
    <a>Nova senha</a>
  </button>

{% endblock %}

{% block link %}

  <a href="/session/login">Cancelar</a>

{% endblock %}