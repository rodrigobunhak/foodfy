{% extends "layouts/login.njk" %}

{% block title %}

  <h1>Esqueceu a senha?</h1>

{% endblock %}

{% block field %}

  <form action="/users/forgot-password" method="POST" id="form-forget">

    <div class="item">
      <div>E-mail</div>
      <div>
        <input 
          type="text" 
          name="email"
          placeholder="Digite o email cadastrado"
          value="{{ user.email }}"
          onblur="Validade.apply(this, 'isEmail')"
        >
      </div>
    </div>

  </form>

{% endblock %}

{% block buttons %}

  <button class="button" type="submit" form="form-forget">Enviar</button>

{% endblock %}

{% block link %}

  <a href="/users/login">Cancelar</a>

{% endblock %}