{% extends "layouts/login.njk" %}

{% block content %}


<section class="login">
  
  <div class="a">
    
    

  </div>

  <div class="b">

    <div class="content">

      <h1>Esqueceu a senha?</h1>

      <form action="/users/forgot-password" method="POST" >

        <div class="item">
          <div>E-mail</div>
          <div>
            <input 
              type="text" 
              name="email"
              placeholder="Digite o email cadastrado"
              value="{{ user.email }}"
              onblur="Validade.apply(this, 'isEmail')"
            >
          </div>
        </div>

        <button class="button" type="submit">Recuperar senha</button>

      </form>

      

    </div>
    
  </div>
      
</section>

{% endblock %}