{% extends "layouts/login.njk" %}

{% block title %}

  <h1>Esqueceu a senha?</h1>

{% endblock %}

{% block field %}

  <form action="/session/password-forgot" method="POST" id="form-forgot">

    {% include 'session/fields.njk' %}

  </form>

{% endblock %}

{% block buttons %}

  <button class="button" type="submit" form="form-forgot">
    <a>Enviar</a>
  </button>

{% endblock %}

{% block link %}

  <a href="/session/login">Cancelar</a>

{% endblock %}