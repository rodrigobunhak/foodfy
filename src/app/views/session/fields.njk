{% if register %}

  <div class="item">
    <div>Nome completo</div>
    <div>
      <input 
        type="text" 
        name="name"
        placeholder="Digite seu nome completo"
        value="{{ user.name }}"
      >
    </div>
  </div>

{% endif %}

<div class="item">
  <div>E-mail</div>
  <div>
    <input 
      type="text" 
      name="email"
      placeholder="Digite seu email"
      value="{{ user.email }}"
    >
  </div>
</div>

{% if login or register or passwordReset %}

  <div class="item">
    <div>Senha</div>
    <div>
      <input 
        type="password" 
        name="password"
        placeholder="Digite sua senha"
      >
    </div>
  </div>

{% endif %}

{% if register or passwordReset %}

<div class="item">
  <div>Repetir Senha</div>
  <div>
    <input 
      type="password" 
      name="passwordRepeat"
      placeholder="Repita sua senha"
    >
  </div>
</div>

{% endif %}

{% if passwordReset %}

  <input type="hidden" name="token" value="{{token}}">

{% endif %}