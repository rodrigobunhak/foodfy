  <div>
    <input 
      type="text" 
      name="name"
      value="{{ user.name }}"
    >
  </div>
</div>

<div class="item">
  <div><h3>E-mail</h3></div>
  <div>
    <input 
      type="text" 
      name="email"
      value="{{ user.email }}"
    >
  </div>
</div>

