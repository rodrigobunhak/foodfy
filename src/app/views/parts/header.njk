{% macro content(type, user) %}


{% if type == 'admin' %}
<header class="header header-admin">
{% else %}
<header class="header">
{% endif %}

  <div class="menu">

    

    <div class="name">
      <a href="/">FoodFy</a>
    </div>

    <nav id="navigation">
      <div class="navigation-main">
        {% if type == 'default' %}
          <a href="/home/about">Sobre</a>
          <a href="/home/recipes">Receitas</a>
          <a href="/home/chefs">Chefs</a>
          <a href="/recipes">Cadastros</a>
        {% endif %}

        {% if type == 'admin' %}
          <a href="/recipes">Receitas</a>
          <a href="/chefs">Chefs</a>
          <a href="/users">Usuários</a>
        {% endif %}
      </div>

      <div class="navigation-session">
        {% if not user %}
          <a href="/session/login">Entrar</a>
        {% endif %}

        {% if user %}
          <form action="/session/logout" method="POST">
            <button type="submit">Sair</button>
          </form>
        {% endif %}
      </div>

    </nav>


  </div>

  <div class="banner">

      {# {% if type == 'default' %} #}
        <div class="title">
          <h1>As melhores receitas</h1>
        </div>
      {# {% endif %} #}

      {# {% if type == 'admin' %}
        <div class="title">
          <h1>Administração</h1>
        </div>
      {% endif %} #}

      {# {% if type == 'default' %} #}
        <div class="subtitle">
          <p>Aprenda a construir os melhores pratos
          com receitas criadas por profissionais
          do mundo inteiro.</p>
        </div>
      {# {% endif %} #}

      {# {% if type == 'admin' %}
        <div class="subtitle">
          <p>Todo cuidado é pouco.</p>
        </div>
      {% endif %} #}

     

      <div class="icon">
      {% if type == 'admin' %}
        <img src="/assets/knife-admin.png" alt="logo">
      {% else %}
        <img src="/assets/knife.png" alt="logo">
      {% endif %}
      </div>

  </div>

</header>
{% endmacro %}