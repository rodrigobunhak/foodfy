{% extends "layouts/admin.njk" %}

{% block content %}

<section class="content form">

  <div class="content-header">
    
    <div class="content-header-title">
      <h1>Editando Receita</h1>
    </div>

    <div class="content-header-menu">
      
        <button class="button button-delete" form="delete-form">Deletar</button>
        <button class="button" type="submit" form="update-form">Salvar</button>
      
    </div>

  </div>
  
  <form method="POST" action="/recipes?_method=PUT" id="update-form" enctype="multipart/form-data">
    
    {% include 'recipe/fields.njk' %}
    <input type="hidden" name="id" value="{{recipe.id}}">

  </form>

  <form method="POST" action="/recipes?_method=DELETE" id="delete-form">
    <input type="hidden" name="id" value="{{recipe.id}}">
  </form>
  
</section>

{% endblock %}