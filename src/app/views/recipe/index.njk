{% extends "layout.njk" %}

{% block content %}

  <section class="content">

      <div class="content-header"> {# content-head menu-action #}

        <div class="content-header-title"> {# title #}
          <h2>Gerenciar receitas</h2>
        </div>

        <div class="content-header-menu"> {# action #}

          <form action="/recipes" method="GET">
            <input 
            type="text" 
            name="filter" 
            placeholder="Nome"
            value={{filter}}
            >
          <button class="button"type="submit">Filtrar</button>
          </form>

            
          <button class="button">
            <a href="/recipes/create">Nova Receita</a> {# button-new #}
          </button>
            
          

        </div>

      </div>


    <div class="content-recipe">

      {# <section class="list recipe-list"> #}
      <div class="items items-recipe">
      {% for recipe in recipes %}
        
        <div class="recipe">
              
          <div class="recipe-image">
            <img src="{{recipe.image}}" alt="recipe image">
          </div>

          <div class="recipe-info">

            <h2>{{recipe.title}}</h2>
            <p>{{recipe.chef_name}}</p>
            <a href="/recipes/{{recipe.id}}">Visualizar</a>
          
          </div>
              
        </div>

      {% endfor %}
      </div>
    
    </div>

  </section>
{% endblock %}

