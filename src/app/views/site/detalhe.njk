{% extends "site/layout.njk" %}

{% block content %}

<section class="details">
  
      <div class="recipe">

        <div class="container_image">
          <img src="{{recipe.image}}" alt="prato">
        </div>

        
      
        <h1>{{recipe.title}}</h1>
        <h3>por {{recipe.chef_name}}</h3>
        
        <div class="sub-title">
          <h2>Ingredientes</h2>
          <span id="ingredients">ESCONDER</span>
        </div>
        <div class="ingredients">
          <ul class="items">
            {% for ingredient in recipe.ingredients %}
              <li>{{ingredient}}</li>
            {% endfor %}
          </ul>
        </div>
      
        <div class="sub-title">
          <h2>Modo de preparo</h2>
          <span id="preparation">ESCONDER</span>
        </div>
        <div class="preparation">
          <ul class="items">
            {% for step in recipe.preparation %}
              <li>{{step}}</li>
            {% endfor %}
          </ul>
        </div>
      
        <div class="sub-title">
          <h2>Informações adicionais</h2>
          <span id="information">ESCONDER</span>
        </div>
        <div class="information">
          <p>{{recipe.information}}</p>
        </div>
      
      </div>
      
    </section>


{% endblock %}