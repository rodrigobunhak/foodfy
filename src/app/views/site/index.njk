{% extends "site/layout.njk" %}

{% block content %}

  <section class="details">

    <div class="title">
      <h2>Mais acessadas</h2>
    </div>

    <section class="list three-column">

      {% for recipe in recipes %}
      <div class="item" id="card">
            
        <div class="item_avatar">
          <img src="{{recipe.image}}" alt="recipe image">
        </div>
        <div class="item_info">
          <div class="recipe" data-id="{{recipe.id}}"></div>
          <h2>{{recipe.title}}</h2>

          <p>{{recipe.chef_name}}</p>
        </div>
            
      </div>
      {% endfor %}

    </section>

  </section>
{% endblock %}